% The Thesis Title centered on the very first page of the first chapter
\newcommand{\DisplayTitle}{
  \begin{center}
    \large
    \linespread{1}
    \if@mytitle      \textbf{{\mytitle}}
    \else
      \if@mytitleone   \textbf{\MakeUppercase{\mytitleone}} \\ \fi
      \if@mytitletwo   \textbf{\MakeUppercase{\mytitletwo}} \\ \fi
      \if@mytitlethree \textbf{\MakeUppercase{\mytitlethree}} \\ \fi
      \if@mytitlefour  \textbf{\MakeUppercase{\mytitlefour}} \\ \fi
      \if@mytitlefive  \textbf{\MakeUppercase{\mytitlefive}} \\ \fi
    \fi
    \linespread{1.6}
    \vspace*{3em}
  \end{center}
}


